
<section class="todoapp">
	<header class="header">
		<h1>todos</h1>
		<%= form_for(@list) do |f| %>
			<%= f.text_field :name, :class => "new-todo", :placeholder => (@list.errors.full_messages_for(:name).first || "Add a New List") %>
			<%= f.submit :style => "display: none" %>
		<% end %>
	</header>

	<section class="main">
		<input class="toggle-all" type="checkbox">
    <label for="toggle-all">Mark all as complete</label>
		<ul class="todo-list">
			<% @lists.each do |list| %>
			<li>
				<div class="view">
					<label><%= link_to list.name, list_path(list) %></a></label>

					<%= form_tag(list_path(list), :method => :delete) do %>
						<button type="submit" class="destroy"></button>
					<% end %>
				</div>
			</li>
			<% end %>
		</ul>
	</section>

	<footer class="">

	</footer>

</section>

<footer class="info">
	<p>You are logged in as: <%= current_user.name.titlecase %></p>
	<p><%= current_user.email %></p>

	<p><%= link_to "Logout", logout_path %></p>
</footer>
